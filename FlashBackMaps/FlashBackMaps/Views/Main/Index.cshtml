@{
    ViewBag.Title = "Home Page";
}

<div id="mapid" style="width: 600px; height: 400px; position: relative;" class="leaflet-container leaflet-fade-anim" tabindex="0"></div>

<figure class="cd-image-container">
    <img src="Images/1.1.png" alt="Original Image">
    <span class="cd-image-label" data-type="original">Original</span>

    <div class="cd-resize-img">
        <!-- the resizable image on top -->
        <img src="Images/1.2.png" alt="Modified Image">
        <span class="cd-image-label" data-type="modified">Modified</span>
    </div>

    <span class="cd-handle"></span> <!-- slider handle -->
</figure> <!-- cd-image-container -->

@section scripts {
    @Scripts.Render("~/bundles/leaflet")
    @Scripts.Render("~/bundles/mainpagescripts")
    @Scripts.Render("~/bundles/angular")
}